@model HomeIndexViewModel

@if (Model.Products != null)
{
    foreach (var product in Model.Products.Take(8))
    {
        <ul>
            <li class="best-collection-list">
                <div class="product-card-container">
                    <div class="product-card">
                        <div class="product-card-img">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="product image">
                            }
                            <div class="product-card-menu">
                                <a class="btn btn-theme w-100 d-xl-none" asp-controller="Products" asp-action="Index" asp-route-id=@product.SKU>Show Details</a>
                            </div>
                        </div>
                        <div class="product-card-body">
                            <p class="product-card-category">@product.Category</p>
                            <p class="product-card-title">@product.Name</p>
                            <p class="product-card-price">@product.Price.ToString("C")</p>
                            <nav class="menu-icons">
                                <a class="menu-link" asp-controller="ShoppingCart" asp-action="Index"><i class="fa-regular fa-bag-shopping"></i></a>
                            </nav>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    }
}